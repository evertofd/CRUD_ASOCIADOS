<p id="notice"><%= notice %></p>

<h1 class=" text-center">Areas</h1>

<br/><br/>

<div class="container ">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Area </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= link_to 'Show', area, :class => 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_area_path(area), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br/><br/>
<div class="text-center">
<%= link_to 'New Area', new_area_path %>
</div>
